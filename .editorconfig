[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.rs]
indent_style = space
indent_size = 4
# line length is only supported with vim and emacs
max_line_length = 100

[*.{md,yml,yaml,nix}]
indent_style = space
indent_size = 4
# line length is only supported with vim and emacs
max_line_length = 80
